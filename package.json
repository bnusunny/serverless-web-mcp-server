{
  "name": "serverless-web-mcp-server",
  "version": "0.2.0",
  "description": "Model Context Protocol server for deploying web applications to AWS serverless infrastructure",
  "main": "build/index.js",
  "type": "commonjs",
  "bin": {
    "serverless-web-mcp": "build/index.js"
  },
  "scripts": {
    "build": "tsc --noEmit && esbuild src/index.ts --bundle --platform=node --target=node16 --format=cjs --outfile=build/index.js && chmod +x build/index.js",
    "start": "node build/index.js",
    "dev": "NODE_OPTIONS=\"--loader ts-node/esm\" ts-node --project tsconfig.node.json src/index.ts",
    "dev:http": "NODE_OPTIONS=\"--loader ts-node/esm\" MCP_TRANSPORT=http ts-node --project tsconfig.node.json src/index.ts",
    "dev:debug": "NODE_OPTIONS=\"--loader ts-node/esm\" DEBUG=true ts-node --project tsconfig.node.json src/index.ts",
    "dev:http:debug": "NODE_OPTIONS=\"--loader ts-node/esm\" MCP_TRANSPORT=http DEBUG=true ts-node --project tsconfig.node.json src/index.ts",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "test:unit": "jest --config jest.config.cjs test/unit",
    "test:integration": "jest --config jest.config.cjs test/integration",
    "test:e2e": "jest --config jest.config.cjs test/e2e"
  },
  "keywords": [
    "mcp",
    "serverless",
    "aws",
    "lambda",
    "api-gateway",
    "s3",
    "cloudfront",
    "sam"
  ],
  "author": "AWS",
  "license": "MIT",
  "files": [
    "build",
    "templates",
    "README.md"
  ],
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.529.1",
    "@aws-sdk/client-cloudwatch-logs": "^3.529.1",
    "@aws-sdk/client-dynamodb": "^3.529.1",
    "@aws-sdk/client-lambda": "^3.529.1",
    "@aws-sdk/client-s3": "^3.529.1",
    "@modelcontextprotocol/sdk": "^1.10.0",
    "express": "^5.1.0",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "minimist": "^1.2.8",
    "winston": "^3.17.0",
    "yaml-cfn": "^0.3.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudfront": "^3.787.0",
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.3",
    "aws-sdk-mock": "^6.2.1",
    "babel-jest": "^29.7.0",
    "dotenv": "^16.5.0",
    "esbuild": "^0.25.2",
    "esbuild-jest": "^0.5.0",
    "jest": "^29.7.0",
    "nock": "^14.0.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
