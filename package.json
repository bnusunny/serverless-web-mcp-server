  "files": [
    "build",
    "templates",
    "README.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "aws-sdk": "^2.1473.0",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.2.2"
  }
